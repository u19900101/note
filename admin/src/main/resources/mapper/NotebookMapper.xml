<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ppppp.evernote.mapper.NotebookMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="ppppp.evernote.entity.Notebook">
        <result column="uid" property="uid" />
        <result column="title" property="title" />
        <result column="summary" property="summary" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="note_count" property="noteCount" />
        <result column="img_url" property="imgUrl" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        uid, title, summary, create_time, update_time, note_count, img_url, status
    </sql>

</mapper>
